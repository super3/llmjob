{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ALWAYS"
  },
  "services": [
    {
      "name": "redis",
      "image": "redis:alpine",
      "volumes": [
        {
          "mountPath": "/data",
          "name": "redis-data"
        }
      ]
    }
  ]
}